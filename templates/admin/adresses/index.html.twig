{% extends 'base.html.twig' %}

{% block title %}Adresses index{% endblock %}

{% block body %}
    <h1>Adresses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pays</th>
                <th>Ville</th>
                <th>Rue</th>
                <th>Code_postal</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                <td>{{ adress.id }}</td>
                <td>{{ adress.pays }}</td>
                <td>{{ adress.ville }}</td>
                <td>{{ adress.rue }}</td>
                <td>{{ adress.codePostal }}</td>
                <td>{{ adress.titre }}</td>
                <td>
                    <a href="{{ path('adresses_show', {'id': adress.id}) }}">show</a>
                    <a href="{{ path('adresses_edit', {'id': adress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adresses_new') }}">Create new</a>
{% endblock %}
