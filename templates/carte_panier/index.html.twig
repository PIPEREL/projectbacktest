{% extends 'base.html.twig' %} {% block title %}Hello CartePanierController!{% endblock %} {% block body %}
<div class="flex flex-col lg:flex-row flex-wrap shadow-md my-10">
    <div class="lg:w-3/4 bg-white px-10 py-10">
        <div class="flex justify-between border-b pb-8">
            <h1 class="font-semibold text-2xl">Mon panier</h1>
            <h2 class="font-semibold text-2xl">{{qte}} articles</h2>
        </div>
        <div class="flex mt-10 mb-5">
            <h3 class="font-semibold text-gray-600 text-xs uppercase w-2/5">Détails du produit</h3>
            <h3 class="font-semibold text-center text-gray-600 text-xs uppercase w-1/5 ">Quantité</h3>
            <h3 class="font-semibold text-center text-gray-600 text-xs uppercase w-1/5">Prix</h3>
            <h3 class="font-semibold text-center text-gray-600 text-xs uppercase w-1/5 ">Total</h3>
        </div>
        {% if panier | length >0 %} {% for article in panier %}
        <div class="flex items-center hover:bg-purple-100 -mx-8 px-6 py-5">
            <div class="flex w-2/5">
                <!-- product -->
                <div class="w-30 flex-shrink-0">
                    <img class="h-40" src="{{asset('img/carte/') ~ article.carte.img}}" alt="">
                </div>
                <div class="flex flex-col justify-between ml-4 flex-grow">
                    <span class="font-bold text-sm">{{article.carte.nom}} </span>
                    <span class="text-purple-500 text-xs">{{article.carte.libelle}}</span>
                    <a href="{{path('retirearticle',{'id': article.carte.id}) }}" class="font-semibold hover:text-red-500 text-gray-500 text-xs">Retirer</a>
                </div>
            </div>
            <div class="flex justify-center w-1/5">
                <a href="{{path('moinsarticle', {'id' : article.carte.id}) }}"><i class="fas fa-minus"></i></a>
                <input class="mx-2 border text-center w-8" type="text" value="{{ article.quantite }}">
                <a href="{{path('ajoutarticle', {'id' : article.carte.id}) }}"><i class="fas fa-plus"></i></a>
            </div>
            <span class="text-center w-1/5 font-semibold text-sm">{{article.carte.prix}} $</span>
            <span class="text-center w-1/5 font-semibold text-sm">{{ article.carte.prix * article.quantite }} $</span>
        </div>{% endfor %} {% else %}
        <p>le panier est vide</p>
        {% endif %}
        <a href="{{ path('set_print') }}" class="flex font-semibold text-indigo-600 text-sm mt-10">

            <svg class="fill-current mr-2 text-indigo-600 w-4 " viewBox="0 0 448 512">
                <path d="M134.059 296H436c6.627 0 12-5.373 12-12v-56c0-6.627-5.373-12-12-12H134.059v-46.059c0-21.382-25.851-32.09-40.971-16.971L7.029 239.029c-9.373 9.373-9.373 24.569 0 33.941l86.059 86.059c15.119 15.119 40.971 4.411 40.971-16.971V296z" />
            </svg> Retourner aux boosters
        </a>
    </div>

    <div id="summary" class="lg:w-1/4 px-8 py-10">
        <h1 class="font-semibold text-2xl border-b pb-8">Total de la commande</h1>
        <div class="flex justify-between mt-10 mb-5">
            <span class="font-semibold text-sm uppercase">{{qte}} articles</span>
            <span class="font-semibold text-sm">{{total}} $</span>
        </div>
        <div>
            {{ include('carte_panier/_form.html.twig') }}
            <!-- <label class="font-medium inline-block mb-3 text-sm uppercase">Livraison</label>
            <select class="block p-2 text-gray-600 w-full text-sm">
                <option>Livraison non suivie - 5.00 $</option>
                <option>Livraison Suivie - 10.00 $</option>
            </select> -->
        </div>

        <div class="border-t mt-8">
            <div class="flex font-semibold justify-between py-6 text-sm uppercase">
                <span>Total</span>
                <span>{{totalLivraison}} $</span>
                <button></button>
            </div>
            <a href="{{path('panier')}}"><button class="bg-purple-500 font-semibold hover:bg-purple-600 py-3 text-sm text-white uppercase w-full ">Payer</button></a>

        </div>
    </div>

</div>

{% endblock %}